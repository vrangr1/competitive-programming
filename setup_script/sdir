## Script to setup input and output directories in the current folder
#!/bin/bash

file=$1
if [[ $file == *.cpp ]]; then file=${file%".cpp"}; fi
if ! test -f $file.cpp;then echo "${file}.cpp does not exist"; exit;fi

mkdir -p input_$file
mkdir -p output_$file
mv *.in input_$file/ 2> /dev/null
mv *.ans output_$file/ 2> /dev/null