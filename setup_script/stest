## Script for setting up a testing folder for the given problem
folder_name=${1:-"test"}
opt_sol=${1:-"test.cpp"}
if [[ $opt_sol != *.cpp ]]
then
    opt_sol="$opt_sol.cpp"
fi
if ! test -f $opt_sol
then
  echo "${opt_sol} does not exist."
  exit 1
fi
if [[ $folder_name == *.cpp ]]
then
    folder_name=${folder_name%".cpp"}
fi
if [[ $folder_name != *test ]]
then
    folder_name="test_${folder_name}"
fi
echo "Setting up testing folder for ${opt_sol} as ${folder_name}"
mkdir -p $folder_name
cd $folder_name
cp -n /Users/anavp/home/coding/competitive-programming/algo/test/generator.cpp ./
cp -n /Users/anavp/home/coding/competitive-programming/algo/test/brute_force.cpp ./
code brute_force.cpp
code generator.cpp