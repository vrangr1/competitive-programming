## Script to copy over the template file into the current directory with the given name
file_name=${1:-"file.cpp"}
if [[ $file_name != *.cpp ]]
then
    file_name="$file_name.cpp"
fi
if test -f $file_name
then
    echo "File already exists"
    code $file_name
    exit 1
fi
echo "Setup file: $file_name"
created=$(date)
echo $created
cp /Users/anavp/home/coding/competitive-programming/algo/template.cpp $file_name
sed -i '' '4i\
* Created : '"${created}"'\
' $file_name
code $file_name